{sys, [
       {lib_dirs, ["../apps", "../deps"]},
       {rel, "flake", "0.1",
        [
         kernel,
         stdlib,
         sasl,
         inets,
         crypto,
         flake,
         syslog
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "flake"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},
       {app, flake, [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]}
      ]}.

{target_dir, "flake"}.
{clean_files, "flake"}.
{overlay, [
          {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
          {copy, "files/flake.config", "etc/flake.config"},
          {copy, "files/vm.args", "etc/vm.args"},
          {copy, "files/flake", "bin/flake"}]}.
